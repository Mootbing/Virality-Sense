{
  "manifest_version": 3,
  "name": "Virality Sense",
  "version": "1.0.0",
  "description": "Track viral content across YouTube, Instagram, and LinkedIn for CRM insights",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.instagram.com/*",
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/utils/storage.js", "src/utils/videoData.js", "src/content/youtube.js"],
      "css": ["src/styles/button.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["src/utils/storage.js", "src/utils/videoData.js", "src/content/instagram.js"],
      "css": ["src/styles/button.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/utils/storage.js", "src/utils/videoData.js", "src/content/linkedin.js"],
      "css": ["src/styles/button.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
